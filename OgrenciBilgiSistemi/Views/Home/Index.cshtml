@{
    ViewData["Title"] = "Dashboard";
}

<h2>Hoşgeldiniz, @User.Identity.Name!</h2>

<div class="row mt-4">
    @if (User.IsInRole("Admin"))
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kullanıcı Yönetimi</h5>
                    <p class="card-text">Admin olarak kullanıcı ekleyip düzenleyebilirsiniz.</p>
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-primary">Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ders Yönetimi</h5>
                    <p class="card-text">Yeni ders oluşturup öğretmen atayabilirsiniz.</p>
                    <a asp-controller="Admin" asp-action="Courses" class="btn btn-primary">Git</a>
                </div>
            </div>
        </div>
    }
    else if (User.IsInRole("Teacher"))
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Derslerim</h5>
                    <p class="card-text">Kendi derslerinizi yönetin ve kayıtları görün.</p>
                    <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Git</a>
                </div>
            </div>
        </div>
    }
    else if (User.IsInRole("Student"))
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Derslere Kayıt</h5>
                    <p class="card-text">Açık dersleri görün ve kayıt olun.</p>
                    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">Git</a>
                </div>
            </div>
        </div>
    }
</div>
