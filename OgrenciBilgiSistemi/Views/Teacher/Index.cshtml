@model IEnumerable<OgrenciBilgiSistemi.Models.Course>
@{
    ViewData["Title"] = "Derslerim";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Yeni Ders Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Ders Başlığı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Title</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Kayıtlar</a>
                    <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?');">
                            Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
