@model IEnumerable<OgrenciBilgiSistemi.Models.Course>
@using System.Linq
@{
    ViewData["Title"] = "Ders Yönetimi";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="CreateCourse" class="btn btn-primary mb-3">Yeni Ders Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Öğretmen</th>
            <th>Öğrenci Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Title</td>
            <td>
                @if (c.Teacher != null)
                {
                    @($"{c.Teacher.FirstName} {c.Teacher.LastName}")
                }
                else
                {
                    <em>Atanmamış</em>
                }
            </td>
            <td>@(c.Enrollments?.Count() ?? 0)</td>
            <td>
                <a asp-action="EditCourse" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <form asp-action="DeleteCourse" asp-route-id="@c.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger"
                            onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?');">
                        Sil
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
