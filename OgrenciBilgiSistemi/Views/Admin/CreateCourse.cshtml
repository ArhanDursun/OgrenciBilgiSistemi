@model OgrenciBilgiSistemi.Models.Course

@{
    ViewData["Title"] = "Yeni Ders Oluştur";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@ViewData["Title"]</h5>
            <a asp-action="Courses" class="btn btn-light">
                <i class="bi bi-arrow-left-circle"></i> Geri
            </a>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <form asp-action="CreateCourse" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Ders Adı</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherId" class="form-label">Öğretmen</label>
                    <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherList">
                        <option value="">-- Öğretmen Seçiniz --</option>
                    </select>
                    <span asp-validation-for="TeacherId" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-plus-circle"></i> Oluştur
                    </button>
                    <a asp-action="Courses" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
